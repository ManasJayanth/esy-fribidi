{
  "name": "esy-fribidi",
  "version": "1.0.5000",
  "description": "fribidi packaged for esy",
  "esy": {
    "buildsInSource": true,
    "build": [
      ["chmod", "755", "./configure"],
      ["bash", "-c", "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"],
      ["make"],
      ["make", "install"]
    ],
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "val": "#{self.lib / 'pkgconfig' : $PKG_CONFIG_PATH}",
        "scope": "global"
      }
    }
  },
  "dependencies": {},
  "resolutions": {}
}
